doctype html
html
	head
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, user-scalable=no, initial-scale=1")

		//- rich snippets
		link(itemprop="url" href=page.url)

		//- favicon
		link(rel="apple-touch-icon", sizes="180x180", href="/img/favicon/apple-touch-icon.png")
		link(rel="icon", type="image/png", href="/img/favicon/favicon-32x32.png", sizes="32x32")
		link(rel="icon", type="image/png", href="/img/favicon/favicon-16x16.png", sizes="16x16")
		link(rel="manifest", href="/img/favicon/manifest.json")
		link(rel="mask-icon", href="/img/favicon/safari-pinned-tab.svg", color="#ea2e46")
		link(rel="shortcut icon", href="/img/favicon/favicon.ico")
		meta(name="apple-mobile-web-app-title", content="Villain Shop")
		meta(name="application-name", content="Villain Shop")
		meta(name="msapplication-config", content="/img/favicon/browserconfig.xml")
		meta(name="theme-color", content="#ffffff")

		//- styles
		//- link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Montserrat:700|Poppins:300,400&amp;subset=devanagari,latin-ext,vietnamese")
		link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
		link(rel="stylesheet", href="/css/style.css")

		//- meta
		title #{page.title}
		meta(name="description", content=page.short)

		//- add something on the fly
		block head

	body.loading
		#wrapper-scroll
			block content

		#wrapper-nav
			include ../sections/nav

		#wrapper-modal
			block modal

		script(type="application/ld+json").
			{
				"@context": "http://schema.org",
				"@type": "Organization",
				"name": "#{page.title}",
				"url": "#{page.url}",
				"sameAs": [
					"https://www.facebook.com/#{page.social.twitter}",
					"https://www.twitter.com/#{page.social.twitter}",
					"https://www.etsy.com/shop/#{page.social.twitter}",
					"https://www.pinterest.com/#{page.social.twitter}"
				]
			}
		script(src="http://sdks.shopifycdn.com/js-buy-sdk/v0/latest/shopify-buy.umd.polyfilled.min.js")
		script(src="/js/app.js")
		script.
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

			ga('create', '#{page.analytics}', 'auto');
			ga('send', 'pageview');